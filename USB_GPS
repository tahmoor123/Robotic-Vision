# Reading GPS reading on Terminal.
# Author Tahmoor Naeem

import os
from gps import *
from time import *
import time
import threading

#Global variable is usually none. so better leave it empty.
gpsd = None 

os.system('clear') 
class GpsPoller(threading.Thread):
	def __init__(self):
		threading.Thread.__init__(self)
		global gpsd #bring it in scope
		gpsd = gps(mode=WATCH_ENABLE) 
		self.current_value = None
		self.running = True 

	def run(self):
		global gpsd
	while gpsp.running:
			gpsd.next() 

if __name__ == '__main__':
	gpsp = GpsPoller() 
	try:
		gpsp.start() 
		while True:
		
			os.system('clear')

	
		print ' GPS reading'
		print '---------'
		print 'latitudeÂ Â Â  ' , gpsd.fix.latitude
		print 'longitudeÂ Â  ' , gpsd.fix.longitude
		print 'time utcÂ Â Â  ' , gpsd.utc,' + ', gpsd.fix.time
		print 'altitude (m)' , gpsd.fix.altitude
		print 'eptÂ Â Â Â Â Â Â Â  ' , gpsd.fix.ept
		print 'speed (m/s) ' , gpsd.fix.speed
		print 'climbÂ Â Â Â Â Â  ' , gpsd.fix.climb
		print
		print 'satsÂ Â Â Â Â Â Â  ' , gpsd.satellites
	
	  time.sleep(5) #set to whatever
	
	except (KeyboardInterrupt, SystemExit): 
		print "\nKilling Thread..."
		gpsp.running = False
		gpsp.join() 
